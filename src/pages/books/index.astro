---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from 'astro:content';

const bookEntries = await getCollection('books');
---

<Layout title="Books">
    <main>
        <h1>Books</h1>
        <ul>
            {
                bookEntries.map(book => (
                    <li>
                        <a href={`/books/${book.slug}`}>{book.data.title}</a>
                    </li>
                ))
            }
        </ul>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 1.5rem;
        max-width: 60ch;
    }
</style>
